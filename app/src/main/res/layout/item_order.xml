<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardElevation="3dp"
    android:layout_marginBottom="2dp"
    app:contentPadding="5dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:padding="5dp"
        >
        <ImageView
            android:id="@+id/productIv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_show_cart"
            app:tint="@color/white" />
        <LinearLayout
            android:layout_toEndOf="@+id/productIv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/orderIdTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: 12345"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:background="@drawable/border_bg"
                />
            <TextView
                android:id="@+id/buyerNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Buyer Name"
                />
            <TextView
                android:id="@+id/buyerAddresTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Buyer Address"
                />
            <TextView
                android:id="@+id/productNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Product Name"
                />
            <TextView
                android:id="@+id/productDesTv"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Buyer Desc"
                />
            <TextView
                android:id="@+id/amountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Total Amount: 123 pkr"
                />



        </LinearLayout>
        <TextView
            android:id="@+id/dateTv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="22/06/2021"
            />

        <TextView
            android:id="@+id/statusTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productIv"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:text="In Progress"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>